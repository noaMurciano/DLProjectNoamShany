{
  "experiment_name": "personal_food_taste_classification",
  "description": "Training configuration for personal food taste preference learning",
  
  "data_paths": {
    "base_data_dir": "data/",
    "food101_cache_dir": "data/food101_cache/",
    "personal_labels_file": "data/personal_labels.xlsx",
    "output_dir": "experiments/"
  },
  
  "model_configuration": {
    "config_file": "configs/model_config.json",
    "pretrained_model_path": "experiments/base_model/best_model.pt"
  },
  
  "training_setup": {
    "data_split": {
      "strategy": "60_20_20",
      "train_ratio": 0.6,
      "val_ratio": 0.2,
      "test_ratio": 0.2,
      "stratify": true,
      "random_seed": 42
    },
    "curriculum_learning": {
      "enabled": true,
      "phase1": {
        "name": "frozen_backbone",
        "epochs": 8,
        "freeze_backbone": true,
        "description": "Train classification head only"
      },
      "phase2": {
        "name": "end_to_end",
        "epochs": 7,
        "freeze_backbone": false,
        "description": "Fine-tune entire model"
      }
    }
  },
  
  "optimization": {
    "optimizer": "AdamW",
    "learning_rates": {
      "head_lr": 0.001,
      "backbone_lr": 1e-05,
      "discriminative": true
    },
    "weight_decay": 0.01,
    "scheduler": {
      "type": "CosineAnnealingLR",
      "T_max": 15,
      "eta_min": 1e-07
    }
  },
  
  "loss_configuration": {
    "loss_function": "CrossEntropyLoss",
    "label_smoothing": 0.05,
    "class_weights": {
      "use_weights": true,
      "method": "inverse_frequency",
      "oversample_minority": true
    }
  },
  
  "training_parameters": {
    "batch_size": 16,
    "num_workers": 2,
    "pin_memory": true,
    "mixed_precision": false,
    "gradient_clipping": {
      "enabled": false,
      "max_norm": 1.0
    }
  },
  
  "regularization": {
    "early_stopping": {
      "enabled": true,
      "patience": 5,
      "metric": "val_macro_f1",
      "mode": "max"
    },
    "model_ema": {
      "enabled": false,
      "decay": 0.999
    }
  },
  
  "monitoring": {
    "log_interval": 10,
    "save_interval": 5,
    "metrics_to_track": [
      "train_loss",
      "train_accuracy", 
      "val_loss",
      "val_accuracy",
      "val_macro_f1",
      "val_per_class_f1"
    ]
  },
  
  "evaluation": {
    "final_evaluation": true,
    "save_predictions": true,
    "generate_confusion_matrix": true,
    "confidence_analysis": true
  },
  
  "reproducibility": {
    "random_seed": 42,
    "deterministic": true,
    "benchmark": true
  },
  
  "system": {
    "device": "auto",
    "num_gpus": 1,
    "distributed": false
  }
}
