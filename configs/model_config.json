{
  "model_name": "Personal Food Taste Classifier",
  "description": "EfficientNet-B3 based classifier fine-tuned for personal food taste preferences",
  "version": "1.0.0",
  
  "architecture": {
    "backbone": "tf_efficientnet_b3",
    "pretrained": true,
    "num_classes": 3,
    "hidden_dim": 256,
    "dropout": 0.3,
    "global_pool": "avg"
  },
  
  "classes": {
    "0": "disgusting",
    "1": "neutral", 
    "2": "tasty"
  },
  
  "input_specification": {
    "image_size": 224,
    "channels": 3,
    "format": "RGB",
    "normalization": {
      "mean": [0.485, 0.456, 0.406],
      "std": [0.229, 0.224, 0.225],
      "note": "ImageNet normalization"
    }
  },
  
  "training_hyperparameters": {
    "learning_rates": {
      "head_lr": 0.001,
      "backbone_lr": 1e-05,
      "note": "Discriminative learning rates for transfer learning"
    },
    "optimization": {
      "optimizer": "AdamW",
      "weight_decay": 0.01,
      "scheduler": "CosineAnnealingLR",
      "eta_min": 1e-07
    },
    "training_schedule": {
      "phase1_epochs": 8,
      "phase2_epochs": 7,
      "total_epochs": 15,
      "early_stopping_patience": 5
    },
    "batch_config": {
      "batch_size": 16,
      "num_workers": 2,
      "pin_memory": true,
      "drop_last": true
    }
  },
  
  "loss_configuration": {
    "primary_loss": "CrossEntropyLoss",
    "label_smoothing": 0.05,
    "use_class_weights": true,
    "class_weights_method": "inverse_frequency"
  },
  
  "data_augmentation": {
    "training_transforms": {
      "random_resized_crop": {
        "size": 224,
        "scale": [0.85, 1.0]
      },
      "random_horizontal_flip": {
        "probability": 0.3
      },
      "color_jitter": {
        "brightness": 0.1,
        "contrast": 0.1,
        "saturation": 0.1,
        "hue": 0.05
      }
    },
    "validation_transforms": {
      "resize": 256,
      "center_crop": 224
    }
  },
  
  "transfer_learning_strategy": {
    "freeze_backbone_initially": true,
    "progressive_unfreezing": true,
    "phase1_description": "Train classification head only with frozen backbone",
    "phase2_description": "End-to-end fine-tuning with unfrozen backbone"
  },
  
  "dataset_configuration": {
    "personal_dataset_size": 200,
    "class_distribution": {
      "disgusting": 37,
      "neutral": 84,
      "tasty": 78
    },
    "recommended_split": "60/20/20",
    "alternative_split": "80/20"
  },
  
  "performance_targets": {
    "expected_accuracy_80_20": "50-55%",
    "expected_accuracy_60_20_20": "35-40%",
    "primary_metric": "macro_f1_score",
    "class_specific_challenges": {
      "disgusting": "Hardest to detect (personal subjectivity)",
      "neutral": "Most predictable (conservative model behavior)",
      "tasty": "Moderate performance (quality indicators)"
    }
  }
}
